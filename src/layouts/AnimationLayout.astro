---
import "@/styles/animations.css";
---

<html lang="en">
  <head>
    <slot name="head" />
  </head>
  <body>
    <slot />

    <!-- Only run observer fallback when scroll‑timeline is NOT supported -->
    <script is:inline client:load>
      document.addEventListener("DOMContentLoaded", () => {
        // Fallback only when animation-timeline isn’t supported
        if (!CSS.supports("animation-timeline", "view()")) {
          console.log(
            "Scroll timeline not supported—using IntersectionObserver fallback"
          );
          document.documentElement.classList.add("use-io");

          const io = new IntersectionObserver(
            (entries, observer) => {
              entries.forEach(({ target, isIntersecting }) => {
                if (isIntersecting) {
                  target.classList.add("visible");
                  observer.unobserve(target);
                }
              });
            },
            { threshold: 0.1 }
          );

          // Correctly select ALL elements with the .load class
          document.querySelectorAll(".load").forEach((el) => io.observe(el));
        }
      });
    </script>
  </body>
</html>
