---
import { Image } from "astro:assets";
import Certification1 from "@/assets/iicrccertifiedlogo.png";
import Certification2 from "@/assets/iicr-cert.png";

const certImageClass = "w-auto h-25";
---
 <div class="flex items-center gap-[var(--spacing-md)]">
            <Image
              src={Certification1}
              alt="IICRC Certified Logo"
              class={certImageClass}
              loading="lazy"
              format="webp"
              quality="low"
            />
             <Image
              src={Certification2}
              alt="Institute of Inspection Cleaning and Restoration Certification Logo"
              class={certImageClass}
              loading="lazy"
              format="webp"
              quality="low"
            />
          </div>