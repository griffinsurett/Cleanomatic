---
const {
  label,
  name,
  type = "text",
  placeholder = "",
  value = "",
  required = false,
  inputClass = "",
  wrapperClass = "",
  labelClass = "",
} = Astro.props;

// If no label, append "*" into the placeholder
const placeholderText = required && !label
  ? `${placeholder || name} *`
  : placeholder;
---
<div class={wrapperClass}>
  {label && (
    <label for={name} class={labelClass}>
      {label}
      {required && <span class="text-primary ml-1">*</span>}
    </label>
  )}
  <input
    id={name}
    name={name}
    type={type}
    placeholder={placeholderText}
    value={value}
    required={required}
    class={inputClass}
  />
</div>
