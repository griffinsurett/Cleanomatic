---
// src/components/ListItem.astro
import Button from "../Button.jsx";

const {
  item,
  collectionName,
  HasPage,
  showButton = true,
  itemClass = "",
} = Astro.props;

// decide whether this entry should show a “View More” button
const effectiveHasPage =
  item.data.hasPage !== undefined ? item.data.hasPage : HasPage;
---

<li class={`${itemClass} py-[var(--spacing-sm)] list-inside`}>
  {/* Inline title + description */}
  <strong class="font-semibold">{item.data.title}:</strong>&nbsp;
  <span class="inline text-sm leading-relaxed">
    {item.data.description}
  </span>

  {/* Optional “View More” button on its own line */}
  {effectiveHasPage && showButton && (
    <div class="mt-2">
      <Button variant="primary" href={`/${collectionName}/${item.slug}`}>
        View More
      </Button>
    </div>
  )}
</li>
