---
// src/components/StaticSections/QuoteForm.astro
import Section from "@/components/Section.astro";
import ContactForm from "@/components/Forms/ContactForm.astro";
---
<Section
  sectionClass="bg-primary flex justify-center items-center py-[var(--spacing-md)] min-h-[60vh] text-center lg:text-left"
  contentClass="flex justify-between items-center flex-wrap lg:flex-nowrap"
  topContentClass="w-full lg:min-w-1/2"
  headingAreaClass="w-full"
  heading={[
    {
      text: "Fill out this form to Contact us and Request a Free Quote",
      tagName: "h2",
      class: "h2 text-[var(--color-bg)]",
    }
  ]}
  childSlotClass="w-full lg:min-w-1/2"
  >
  <ContactForm />
</Section>
