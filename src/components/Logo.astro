---
import { Image } from "astro:assets";
import { SiteData } from "@/content/SiteData";

// Accept optional props to override or extend classes.
const {
  containerClass = "",
  titleClass = "",
  taglineClass = "",
  imageClass = "",
} = Astro.props;
---

<a
  href="/"
  class={`flex flex-col items-center justify-center py-[var(--spacing-md)] ${containerClass}`}
>
  <div class={`md:font-black h1 ${titleClass}`}>
    {SiteData.title}
  </div>
  <div
    class={`tagline-and-logo w-fit flex justify-center items-center text-sm text-stroke md:text-xl font-bold italic ${taglineClass}`}
  >
    {SiteData.tagline}
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class={`h-4 w-auto md:h-7 animate-slide-right mx-[var(--spacing-xs)] ${imageClass}`}
      loading="eager"
      fetchpriority="high"
      aria-hidden="true"
    />
  </div>
</a>
