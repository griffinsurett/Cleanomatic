---
import { Image } from "astro:assets";
import { SiteData } from "@/content/SiteData";

// Accept optional props to override or extend classes.
const {
  containerClass = "",
  titleClass = "",
  taglineClass = "",
  imageClass = "",
} = Astro.props;
---
<a href="/" class={`flex flex-col items-start justify-left py-[var(--spacing-md)] ${containerClass}`}>
  <div class={`h2 ${titleClass}`}>
    {SiteData.title}
  </div>
  <div class={`tagline-and-logo flex justify-center items-center ${taglineClass}`}>
    <div class="h5 italic px-[var(--spacing-lg)] md:px-[var(--spacing-lg)]">
      {SiteData.tagline}
    </div>
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class={`h-6 w-auto md:h-8 animate-slide-right ${imageClass}`}
      loading="eager"
      fetchpriority="high"
      aria-hidden="true"
    />
  </div>
</a>
