---
import { Image } from "astro:assets";
import { SiteData } from "@/content/SiteData";

// Accept optional props to override or extend classes.
const {
  containerClass = "sm:items-center items-start",
  titleClass = "h1",
  taglineClass = "",
  imageClass = "",
} = Astro.props;
---
<a
  href="/"
  class={`flex flex-col justify-center ${containerClass}`}
>
  <!-- Site title fades in -->
  <div class={`${titleClass} fade-in`}>
    {SiteData.title}
  </div>

  <!-- Tagline grouped so we can fade it in separately -->
  <div class="tagline-container flex">
    <div
      class={`tagline-text text-stroke h5 font-bold capitalize italic fade-in ${taglineClass}`}
    >
      {SiteData.tagline}
    </div>
    <Image
      src={SiteData.logo.src}
      alt={`${SiteData.title} logo`}
      class={`h-4 w-auto md:h-7 mx-[var(--spacing-xs)] slide-left ${imageClass}`}
      loading="eager"
      fetchpriority="high"
      aria-hidden="true"
    />
  </div>
</a>

