---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Card from "@/components/LoopComponents/Card";
import ServiceCard from "@/components/LoopComponents/ServiceCard";
import Modal from "@/components/Modal";
---

<Layout title="Welcome to Cleanomatic">
  <!-- Hero Section with two buttons -->
  <Section
    heading={[
      {
        text: "Welcome to Cleanomatic â€“ Your Trusted Cleaning Experts in New Jersey!",
        tagName: "h1",
      },
    ]}
    description="Welcome to Cleanomatic, your one-stop solution for professional cleaning services in New Jersey. With over 23 years of experience"
    buttons={[{ text: "Request Estimate", link: "/contact", class: "mt-[var(--spacing-lg)]" }]}
    sectionClass="min-h-[70vh] flex items-center justify-center bg-cover bg-center z-10"
  />

  {/* Services */}
  <Section
    collection="services"
    query="getAll"
    component={ServiceCard}
    heading={{ text: "Our Services", tagName: "h2" }}
    sectionClass="flex flex-col justify-center items-center text-center my-[var(--spacing-4xl)]"
    contentClass="container flex flex-wrap flex-col justify-between items-center w-full"
    itemsClass="flex flex-wrap justify-center items-center flex-1/2"
  />

  {/* Projects */}
  <Section
    collection="projects"
    query="getAll"
    component={Card}
    heading={{ text: "Our Projects", tagName: "h2" }}
    buttons={[{ text: "View All Projects", variant: "secondary" }]}
    sectionClass="flex flex-col justify-center items-center text-center text-bg bg-accent"
    itemsClass="flex flex-wrap justify-center items-center flex-1/2 py-[var(--spacing-lg)]"
  />

  {/* Testimonials */}
  <Section
    collection="testimonials"
    query="getAll"
    component={Card}
    heading={{ text: "Client Testimonials", tagName: "h2" }}
  />
</Layout>
