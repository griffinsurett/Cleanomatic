---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section.astro";
import PrimaryHero from "@/components/StaticSections/PrimaryHero.astro";
import { Picture } from "astro:assets";
import HeroBg from "@/assets/cleanomatic-truck-1.jpg";
import generations from "@/assets/generations.jpg";
import { SiteData, CTAdata } from "@/content/SiteData";
---

<ExtendedLayout
  title="Welcome to Cleanomatic | Your Trusted Cleaning Experts in New Jersey!"
  image={HeroBg}
  keywords={[
    "cleaning services",
    "professional cleaning",
    "eco-friendly cleaning",
    "New Jersey cleaning",
  ]}
>
  <!-- Hero Section with primary call-to-action -->
  <!-- Hero Section as Section variant -->
  <Section variant="primaryHero" heading={[
    {
      text: "Keeping NJ Clean Since 1999!",
      tagName: "label",
      class: "h4 italic text-bg slide-down",
    },
    {
      text: "Your Trusted Cleaning Experts in New Jersey.",
      tagName: "h2",
      class: "h2 text-bg slide-down",
    },
  ]}
  description={`
    Welcome to Cleanomatic, your trusted, full‑service partner for all things clean in New Jersey—Monmouth, Ocean, Middlesex,
      and beyond. Whether you’re dealing with water damage after a leak, improving indoor air quality by clearing dryer vents and air ducts, or giving your home a fresh start with deep furniture, carpet, and floor cleaning, we’ve got you covered.
  `}
   buttons={[
    {
      text: CTAdata.buttonText,
      link: CTAdata.buttonLink,
      variant: "primary",
    },
  ]}
  >
    <!-- these children become your bullet list -->
    <div class="py-[var(--spacing-lg)] prose prose-lg text-bg">
      <ul class="px-[var(--spacing-xl)] list-disc list-inside space-y-[var(--spacing-md)]">
        <li class="space-y-[var(--spacing-sm)] slide-left">Fast, Reliable Water Removal</li>
        <li class="space-y-[var(--spacing-sm)] slide-left">Breathe Easier with Dryer Vent &amp; Air Duct Cleaning</li>
        <li class="space-y-[var(--spacing-sm)] slide-left">Pristine Carpets, Floors &amp; Upholstery</li>
        <li class="space-y-[var(--spacing-sm)] slide-left">Fully Licensed, Insured &amp; Satisfaction-Guaranteed</li>
      </ul>
    </div>
  </Section>

  <!-- Additional sections such as Services, Service Areas, Testimonials, Gallery, etc. -->
  <Section collection="services" query="getAll" buttonsSectionClass="hidden" />

 <Section
    heading={[
      {
        text: "From Mess to Masterpiece",
        tagName: "h2",
        class: "h2 text-bg mb-[var(--spacing-sm)] load slide-up",
      },
      {
        text: "We don’t just clean— we conquer chaos.",
        tagName: "h6",
        class: "h6 text-bg load slide-up",
      },
    ]}
    sectionClass="bg-accent py-[var(--spacing-xl)] md:py-[var(--spacing-2xl)] lg:py-[var(--spacing-3xl)] text-bg load fade-in"
    contentClass="text-center"
    childSlotClass="flex flex-col text-center justify-center"
  >
    <div
      class="galleries flex flex-col justify-center items-center py-[var(--spacing-xl)] md:py-[var(--spacing-2xl)] lg:py-[var(--spacing-3xl)] gap-[var(--spacing-xl)]"
    >
      <Section
        collection="gallery"
        query="getAll"
        variant="gallery2"
        heading={[
          {
            text: "No Mess We Can’t Tackle",
            tagName: "h3",
            class: "h3 text-bg load slide-up",
          },
        ]}
      />
    </div>
  </Section>

  <!-- About -->
  <!-- About Section with a background picture -->
  <Section
    heading={[
      {
        text: "Generations of Clean",
        tagName: "label",
        class: "h5 load slide-down italic",
      },
      {
        text: "Family Owned and Operated",
        tagName: "h2",
        class: "h2 text-accent mb-[var(--spacing-sm)] load slide-up",
      },
    ]}
    buttons={[
      { text: "More About Us", link: "/about-us", variant: "secondary" },
    ]}
    description="With over 22 years of hands-on experience and hundreds of happy clients, Cleanomatic has become a household name for dependable, honest cleaning services throughout Monmouth and Ocean County. From air ducts to dryer vents, carpets to emergency water damage, our owner-operated team puts integrity and results first."
    descriptionClass="load slide-up"
    sectionClass="flex justify-center items-center text-left section-lg bg-bg"
    contentClass="content-container flex justify-between items-start py-[var(--spacing-2xl)] flex-col-reverse md:flex-row gap-[var(--spacing-xl)] lg:gap-[var(--spacing-2xl)] text-xl"
    topContentClass="w-full lg:min-w-1/2"
    childSlotClass="lg:sticky lg:top-0"
    buttonsSectionClass="py-[var(--spacing-xl)] load scale-up"
    buttonsPlacement="top-content-section"
    itemClass="list-disc list-inside ml-6"  
  >
    <Picture
      src={generations}
      alt="Benefits of Cleanomatic"
      formats={["avif", "webp"]}
      fallbackFormat="jpg"
      loading="eager"
      quality="low"
      fetchpriority="high"
      aria-hidden="true"
      class="w-full h-fit load scale-up"
    />
  </Section>

  <!-- Benefits Section with a background picture -->
  <Section collection="benefits" query="getAll">
    <Picture
      src={HeroBg}
      alt="Benefits of Cleanomatic"
      formats={["avif", "webp"]}
      fallbackFormat="jpg"
      loading="eager"
      quality="low"
      fetchpriority="high"
      aria-hidden="true"
      class="w-[538px] h-fit load scale-up"
    />
  </Section>

  <Section
    collection="serviceAreas"
    query="getAll"
    buttons={[
      { text: "Contact Us", link: "/contact-us", variant: "secondary" },
    ]}
  />
  <Section collection="testimonials" query="getAll" />
  <Section collection="faq" query="getAll">
    <Picture
      src={HeroBg}
      alt="Benefits of Cleanomatic"
      formats={["avif", "webp"]}
      fallbackFormat="jpg"
      loading="eager"
      quality="low"
      fetchpriority="high"
      aria-hidden="true"
      class="w-[538px] py-[var(--spacing-xl)] h-fit load scale-up"
    />
  </Section>
  <Section collection="gallery" query="getAll" />
</ExtendedLayout>
