---
// src/pages/about-us.astro
import Section from "@/components/Section.astro";
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import generations from "@/assets/generations.jpg";
import David from "@/assets/david.jpg";
import { Picture } from "astro:assets";
---
<ExtendedLayout
  title="About Us"
  description="Learn more about our company, our mission, and our team."
  keywords={["about us", "cleaning services", "cleanomatic", "company history"]} 
>
  <SecondaryHero title="About Us" />

          <!-- About Section with a background picture -->
          <Section
          heading={{ text: "New Jersey’s Trusted Experts in Air Duct, Dryer Vent & Indoor Air Quality Solutions", tagName: "h2", class: "h2" }}
          description="With over 22 years of hands-on experience and hundreds of happy clients, Cleanomatic has become a household name for dependable, honest cleaning services throughout Monmouth and Ocean County. From air ducts to dryer vents, carpets to emergency water damage, our owner-operated team puts integrity and results first."
          sectionClass="flex justify-center items-center text-left section-lg"
          contentClass="flex justify-between items-start py-[var(--spacing-2xl)] gap-[var(--spacing-xl)] lg:gap-[var(--spacing-2xl)]"
          topContentClass="w-full lg:min-w-1/2"
          >
            <Picture
              src={generations}
              alt="Benefits of Cleanomatic"
              formats={["avif", "webp"]}
              fallbackFormat="jpg"
              loading="eager"
              quality="low"
              fetchpriority="high"
              aria-hidden="true"
              class="w-[638px] h-fit"
            />
          </Section>

    <!-- Benefits Section with a background picture -->
    <Section
    heading={{ text: "Meet David Derhi – Owner & Operator", tagName: "h2", class: "h2 mb-[var(--spacing-md)]" }}
    description="David’s story is one of hustle, heart, and hard-earned respect. He began his career driving taxis and running car services before pivoting into hospitality. When a friend introduced him to the carpet cleaning business, David found his true calling — working with his hands, helping people, and building relationships. With nothing but a van, a vacuum, and an ironclad work ethic, Cleanomatic was born. Two decades later, he’s still the one picking up the phone, arriving at your door, and with the help of his family, leaving your home healthier than he found it."
    sectionClass="flex justify-center items-center text-left section-lg"
    contentClass="flex justify-between items-start py-[var(--spacing-2xl)] flex-col-reverse md:flex-row-reverse gap-[var(--spacing-xl)] lg:gap-[var(--spacing-2xl)] text-xl"
    topContentClass="w-full lg:min-w-1/2"
    >
      <Picture
        src={David}
        alt="Benefits of Cleanomatic"
        formats={["avif", "webp"]}
        fallbackFormat="jpg"
        loading="eager"
        quality="low"
        fetchpriority="high"
        aria-hidden="true"
        class="w-[423px] h-fit"
      />
    </Section>

  <Section collection="missionVision" query="getAll" />
  <Section collection="gallery" query="getAll" />
</ExtendedLayout>
